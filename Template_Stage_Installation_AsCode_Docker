          header:
            id: Docker
          version: '1.0'
        parameters:
        - name: Login
          value: ${environment.props.login_docker}
        - name: Docker Artifact
          value: ${drop.artifact.target.file}
      - identifier: Run_image
        order: 1
        options:
          applyToList: true
          filePattern: ".*"
          failOnError: true
        script:
          header:
            id: Docker_run
          version: '1.0'
        parameters:
        - name: Login
          value: ${environment.props.login_docker}
        - name: Docker Artifact
          value: ${drop.artifact.target.file}
